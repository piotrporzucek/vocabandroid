<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/vokabes_bg"
    android:gravity="center"
    android:padding="7dp"    
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/vokabes_full_title"
                
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/main_button_learn"        
        android:onClick="showCourses"              
        android:textSize="25sp"
        android:text="@string/learnButton"
        android:id="@+id/learnButton"
        android:padding="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
		android:id="@+id/coursesButton"
        android:background="@drawable/main_button_courses"        
        android:onClick="showCoursesSettings"
        android:text="@string/coursesButton"
        android:textSize="25sp"        
        android:padding="10dp" />

</LinearLayout>